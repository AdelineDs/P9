{% extends 'Template.php.twig' %}

{% block title %}Modération du commentaire{% endblock %}

{% block content %}
    {% if session.id and session.pseudo and session.status == 1 %}
        <div class="col-lg-6 offset-lg-3 text-center">
        <a href="?action=management">retour à l'administration</a>
            <form action="?action=confirmModerationCom" method="post" >
                <input type="hidden" value="{{ com.id }}" name="idCom"/>
                <div class="form-group">
                    <label for="author">Nom ou pseudo:</label>
                    <input name="author" id="author" type=text value="{{ com.author }}" required="" class="form-control">
                </div>
                <div class="form-group">
                    <label for="comment">Modifier le commentaire :</label>
                    <textarea name="comment" id="comment" required="" class="form-control" rows="5">{{ com.comment }}</textarea>
                </div>
                <input type="submit" value="Enregistrer les modifications" class="confirmCom">
            </form>
    {% else %}
        <div class="col-lg-10 offset-lg-1 text-center">
            Vous n'avez pas l'autorisation pour accéder à cette page
        </div>
    {% endif %}
    </div>
{% endblock %}