{% extends 'Template.php.twig' %}

{% block title %}P9 Inscription{% endblock %}

{% block content %}
    <div class="col-12 registration">
        <h2>Inscription</h2>
        <p>Pour vous inscrire en tant que membre, veuillez compléter ce formulaire :</p>
    </div>
    <div class="col-6 offset-3 registrationForm">
        <form action="" method="post">
            <div class="form-group">
                <label for="pseudo">Choisissez votre login : </label>
                <input name="pseudo" id="pseudo" type=text class="form-control" required="" placeholder="Votre pseudo (lettres et chifres uniquements)" aria-describedby="pseudoHelpBlock">
                <small id="pseudoHelpBlock" class="form-text"></small>
            </div>
            <div class="form-group">
                <label for="pass1">Choisissez votre mot de passe : </label>
                <input name="pass1" id="pass1" class="form-control" type=password required="" placeholder="longueur minimal 8 caractères dont 1 chiffre et 1 caractère spécial" aria-describedby="passwordHelpBlock">
                <small id="passwordHelpBlock" class="form-text"></small>
            </div>
            <div class="form-group">
                <label for="pass2">Retapez votre mot de passe : </label>
                <input name="pass1" id="pass2" class="form-control" type=password required="" placeholder="identique à la saisie précédente" aria-describedby="password2HelpBlock">
                <small id="password2HelpBlock" class="form-text"></small>
            </div>
            <div class="form-group">
                <label for="email">Entrez votre adresse mail : </label>
                <input name="email" id="email" class="form-control" type=email required="" placeholder="ex : mon.nom@mail.com" aria-describedby="emailHelpBlock">
                <small id="emailHelpBlock" class="form-text"></small>
            </div>
            <input type="submit" value="S'inscrire" class="connectAdmin">
        </form>
    </div>
{% endblock %}



