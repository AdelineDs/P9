{% extends 'Template.php.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="col-12 text-center registration">
        <h2 class="my-5">Inscription</h2>
        <p>Pour vous inscrire en tant que membre, veuillez compléter ce formulaire :</p>
        <p>Vous êtes déja inscrit ? <a href="?action=connectForm" class="formLink">Connectez-vous !</a></p>
    </div>
    {% if error %}
        <div class="col-12 text-center error">
            {{ error }}
        </div>
    {% endif %}
    <div class="col-10 offset-1 col-lg-4 offset-lg-4 mb-5 text-center registrationForm">
        <form action="?action=registration" method="post">
            <div class="form-group">
                <label for="pseudo">Choisissez votre pseudo : </label>
                <input name="pseudo" id="pseudo" type=text class="form-control" required="" placeholder="lettres et chifres uniquement"
                       aria-describedby="pseudoHelpBlock" {% if post.pseudo %} value ="{{ post.pseudo }}" {% endif %}>
                <small id="pseudoHelpBlock" class="form-text"></small>
            </div>
            <div class="form-group">
                <label for="pass1">Choisissez votre mot de passe : </label>
                <input name="pass1" id="pass1" class="form-control" type=password required="" placeholder="8 caractères minimum dont 1 chiffre et 1 caractère spécial"
                       aria-describedby="passwordHelpBlock" {% if post.pass1 %} value ="{{ post.pass1 }}" {% endif %}>
                <small id="passwordHelpBlock" class="form-text"></small>
            </div>
            <div class="form-group">
                <label for="pass2">Retapez votre mot de passe : </label>
                <input name="pass2" id="pass2" class="form-control" type=password required="" placeholder="identique à la saisie précédente"
                       aria-describedby="password2HelpBlock" {% if post.pass2 %} value ="{{ post.pass2 }}" {% endif %}>
                <small id="password2HelpBlock" class="form-text"></small>
            </div>
            <div class="form-group">
                <label for="email">Entrez votre adresse mail : </label>
                <input name="email" id="email" class="form-control" type=email required="" placeholder="ex : mon.nom@mail.com"
                       aria-describedby="emailHelpBlock" {% if post.email %} value ="{{ post.email }}" {% endif %}>
                <small id="emailHelpBlock" class="form-text"></small>
            </div>
            <input type="submit" value="S'inscrire" class="connectAdmin">
        </form>
    </div>
{% endblock %}