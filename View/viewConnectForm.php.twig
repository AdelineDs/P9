{% extends 'Template.php.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="col-lg-10 offset-lg-1 text-center connection">
        <h2 class="my-5">Connexion</h2>
        <p>Pour vous connecter à votre espace personnel, veuillez compléter ce formulaire :</p>
        <p>Pas encore inscrit ? <a href="?action=registrationForm" class="formLink" >Faites le maintenant !</a></p>
        {% if error %}
            <p class="error">{{ error }}</p>
        {% endif %}
    </div>
    <div class="col-10 offset-1 col-lg-4 offset-lg-4 mb-5 text-center connectForm">
        <form action="?action=connectMember" method="post">
            <div class="form-group">
                <label for="pseudo">Entrez votre pseudo : </label>
                <input name="pseudo" id="pseudo" type=text class="form-control" required="">
            </div>
            <div class="form-group">
                <label for="pass">Entrez votre mot de passe : </label>
                <input name="pass" id="pass" class="form-control" type=password required=""></input>
            </div>
            <input type="submit" value="Se connecter" class="connectMember">
        </form>
    </div>
{% endblock %}